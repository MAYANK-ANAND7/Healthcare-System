<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>contextListener</description>
        <listener-class>listener.ContextListener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>forum</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlet.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlet.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Account</servlet-name>
        <servlet-class>servlet.Account</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupManager</servlet-name>
        <servlet-class>servlet.GroupManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Avatar</servlet-name>
        <servlet-class>servlet.Avatar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupsPage</servlet-name>
        <servlet-class>servlet.GroupsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Invites</servlet-name>
        <servlet-class>servlet.Invites</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostPage</servlet-name>
        <servlet-class>servlet.PostPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Moderation</servlet-name>
        <servlet-class>servlet.Moderation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordResetRequest</servlet-name>
        <servlet-class>servlet.PasswordResetRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordResetConfirmation</servlet-name>
        <servlet-class>servlet.PasswordResetConfirmation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupPosts</servlet-name>
        <servlet-class>servlet.GroupPosts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>servlet.FileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QRServlet</servlet-name>
        <servlet-class>servlet.QRServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/forum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupManager</servlet-name>
        <url-pattern>/group-manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Avatar</servlet-name>
        <url-pattern>/avatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupsPage</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Moderation</servlet-name>
        <url-pattern>/moderation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/files/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Invites</servlet-name>
        <url-pattern>/invites</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostPage</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordResetRequest</servlet-name>
        <url-pattern>/password-reset-request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordResetConfirmation</servlet-name>
        <url-pattern>/password-reset-confirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupPosts</servlet-name>
        <url-pattern>/group-posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QRServlet</servlet-name>
        <url-pattern>/qr-gen</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>
            LoginFilter
        </filter-name>
        <filter-class>
            filter.LoginFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            LoginFilter
        </filter-name>
        <url-pattern>
            /*
        </url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>
            LoginBlockingFilter
        </filter-name>
        <filter-class>
            filter.LoginBlockingFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            LoginBlockingFilter
        </filter-name>
        <servlet-name>
            Account
        </servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>
            ModerationFilter
        </filter-name>
        <filter-class>
            filter.ModerationFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            ModerationFilter
        </filter-name>
        <servlet-name>
            Moderation
        </servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>
            AdministrationFilter
        </filter-name>
        <filter-class>
            filter.AdministrationFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            AdministrationFilter
        </filter-name>
        <servlet-name>
            GroupManager
        </servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>
            GroupReadFilter
        </filter-name>
        <filter-class>
            filter.GroupReadFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            GroupReadFilter
        </filter-name>
        <servlet-name>
            GroupPosts
        </servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>
            GroupFileFilter
        </filter-name>
        <filter-class>
            filter.GroupFileFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            GroupFileFilter
        </filter-name>
        <servlet-name>
            FileServlet
        </servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>
            GroupWriteFilter
        </filter-name>
        <filter-class>
            filter.GroupWriteFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>
            GroupWriteFilter
        </filter-name>
        <servlet-name>
            PostPage
        </servlet-name>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
